<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dee6ff"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/txtResult"
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_above="@+id/txtSolution"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginRight="10dp"
       android:background="#f2f5fc"
       android:text=""
       android:textAlignment="textEnd"
       android:textColor="@color/black"
       android:textSize="40sp" />

   <TextView
       android:id="@+id/txtSolution"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@+id/Linear"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="20dp"
       android:background="#f2f5fc"
       android:text=""
       android:textAlignment="textEnd"
       android:textColor="@color/black"
       android:textSize="60sp" />

   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Linear"
    android:layout_alignParentBottom="true"
       android:orientation="vertical"
    android:layout_centerHorizontal="true">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <Button
          android:id="@+id/btnClearAll"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dip"
          android:layout_marginStart="15dip"
          android:background="@drawable/redbtn"
          android:text="@string/_clearAll"
          android:textSize="25sp"
          android:textColor="#FFFFFF"
          />
      <Button
          android:id="@+id/btnClear"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_marginStart="10dip"
          android:layout_weight="1"
          android:layout_margin="9dip"
          android:background="@drawable/redbtn"
          android:text="@string/_clear"
          android:textSize="25sp"
          android:textColor="@color/white"
          />

      <Button
          android:id="@+id/btnDivide"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dip"
          android:layout_marginStart="10dip"
          android:background="@drawable/redbtn"
          android:text="@string/_divide"
          android:textSize="25sp"

          android:textColor="@color/white"/>
      <Button
          android:id="@+id/btnAdd"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_marginStart="15dip"
          android:layout_margin="9dip"
          android:background="@drawable/redbtn"
          android:text="@string/_plus"
          android:textSize="25sp"

          android:textColor="@color/white"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <Button
          android:id="@+id/btnNum7"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:background="@drawable/lightred"
          android:text="@string/_7"
          android:layout_margin="9dp"
          android:textSize="28sp"
          android:textColor="@color/black"/>

      <Button
          android:id="@+id/btnNum8"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:background="@drawable/lightred"
          android:text="@string/_8"
          android:layout_margin="9dp"
          android:textSize="28sp"
          android:textColor="@color/black"/>

      <Button
          android:id="@+id/btnNum9"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dp"
          android:background="@drawable/lightred"
          android:text="@string/_9"
          android:textSize="28sp"
          android:textColor="@color/black"
           />
      <Button
          android:id="@+id/btnMultiply"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dp"
          android:background="@drawable/redbtn"
          android:text="@string/_multiply"
          android:textColor="@color/white"
          android:textSize="22sp"
           />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <Button
          android:id="@+id/btnNum4"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dp"
          android:background="@drawable/lightred"
          android:text="@string/_4"
          android:textSize="28sp" />

      <Button
          android:id="@+id/btnNum5"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dp"
          android:layout_marginStart="15dp"
          android:background="@drawable/lightred"
          android:text="@string/_5"
          android:textSize="28sp" />

      <Button
          android:id="@+id/btnNum6"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="9dp"
          android:layout_marginStart="15dp"
          android:background="@drawable/lightred"
          android:text="@string/_6"
          android:textSize="28sp" />

      <Button
          android:id="@+id/btnMinus"
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:layout_weight="1"
          android:layout_margin="8dp"
          android:layout_marginStart="15dp"
          android:background="@drawable/redbtn"
          android:text="@string/_minus"
          android:textColor="@color/white"
          android:textSize="25sp"
          android:textStyle="bold" />
   </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

         <Button
             android:id="@+id/btnNum1"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_weight="1"
             android:layout_margin="9dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_1"
             android:textSize="28sp" />

         <Button
             android:id="@+id/btnNum2"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_weight="1"
             android:layout_margin="9dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_2"
             android:textSize="28sp" />

         <Button
             android:id="@+id/btnNum3"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_weight="1"
             android:layout_margin="9dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_3"
             android:textSize="28sp" />
         <Button
             android:id="@+id/btnDzero"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_weight="1"
             android:layout_margin="9dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/redbtn"
             android:textColor="@color/white"
             android:text="@string/_00"
             android:textSize="28sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

         <Button
             android:id="@+id/btnPercentage"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_margin="9dp"
             android:layout_weight="1"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_Percentage"
             android:textSize="28sp" />

         <Button
             android:id="@+id/btnZero"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_margin="9dp"
             android:layout_weight="1"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_0"
             android:textSize="28sp" />

         <Button
             android:id="@+id/btnPoint"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_margin="9dp"
             android:layout_weight="1"
             android:layout_marginStart="15dp"
             android:background="@drawable/lightred"
             android:text="@string/_point"
             android:textSize="28sp"
             android:textStyle="bold" />
         <Button
             android:id="@+id/btnEquals"
             android:layout_width="0dp"
             android:layout_height="75dp"
             android:layout_weight="1"
             android:layout_margin="9dp"
             android:layout_marginStart="15dp"
             android:background="@drawable/redbtn"
             android:textColor="@color/white"
             android:text="@string/_equals"
             android:textSize="28sp" />

      </LinearLayout>


   </LinearLayout>



</RelativeLayout>